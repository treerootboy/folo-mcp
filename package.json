{
  "name": "folo-mcp",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.7.0",
  "description": "MCP server for Folo",
  "author": {
    "name": "Stephen Zhou",
    "url": "https://hyoban.cc",
    "email": "hi@hyoban.cc"
  },
  "license": "MIT",
  "homepage": "https://github.com/hyoban/folo-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyoban/folo-mcp.git"
  },
  "bugs": "https://github.com/hyoban/folo-mcp/issues",
  "keywords": [
    "mcp",
    "Folo"
  ],
  "sideEffects": false,
  "bin": "dist/bin.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "inspect": "chmod 755 dist/bin.js && npx @modelcontextprotocol/inspector dist/bin.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "ufo": "^1.5.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "bunchee": "^6.5.0",
    "eslint": "^9.23.0",
    "eslint-config-hyoban": "4.0.2",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
